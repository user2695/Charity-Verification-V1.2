<%- include("./partials/header") %>
<link rel= "stylesheet" href= "../styles/signup.css">
<form action="/" method="post">
  <div class="container">
    <h1>Charity Verification</h1>
    <h1>Register</h1>
    <p>Please fill in this form to create an account.</p>
    <hr>
    
    <label for="email"><b>Email</b></label>
    <i class="fa fa-envelope icon"></i>
    <input type="email" placeholder="johndoe@gmail.com" pattern=".+@gmail.com" name="email" id="email" required>
    <br />
    <label for="password"><b>Password</b></label>
    <i class="fa fa-key icon"></i>
    <input type="password" placeholder="Enter Password" name="password" id="password" required><br>
    <p>Please enter the Endorser Details.</p><hr>
    <label for="org"><b>Endorser</b></label>
    <i class="fa fa-user icon"></i>
    <input type="text" name="org" placeholder="Organisation Name" id="org" required><br />
    <label for="email"><b>Email</b></label>
    <i class="fa fa-envelope icon"></i>
    <input type="email" placeholder="johndoe@gmail.com" pattern=".+@gmail.com" name="orgEmail" id="orgEmail" required>
    <br />
    <p>By creating an account you agree to our <a href="#">Terms & Privacy</a></p>
    <button type="submit" class="registerbtn btn" ><h3>Register</h3></button>
    <h3>Already have an account? <a href="login">Login</a></h3>
    </div>

  
</form>
<%- include("./partials/footer") %>
